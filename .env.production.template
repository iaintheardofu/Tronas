# ============================================================================
# TRONAS PIA PLATFORM - PRODUCTION ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.production and fill in your values
# ============================================================================

# =========================
# DATABASE (Supabase)
# =========================
# Get from: Supabase Dashboard → Project Settings → Database → Connection string
# IMPORTANT: Use postgresql+asyncpg:// prefix for async SQLAlchemy
DATABASE_URL=postgresql+asyncpg://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-us-central-1.pooler.supabase.com:6543/postgres?sslmode=require

# =========================
# REDIS (Upstash - Free tier)
# =========================
# Get from: https://upstash.com → Create Database → Redis → Copy REST URL
REDIS_URL=rediss://default:[YOUR-PASSWORD]@[YOUR-ENDPOINT].upstash.io:6379

# =========================
# APPLICATION
# =========================
SECRET_KEY=your-64-character-random-string-here
ENVIRONMENT=production
DEBUG=false

# =========================
# AI SERVICES
# =========================
# OpenAI API Key for document classification
OPENAI_API_KEY=sk-...

# =========================
# MICROSOFT 365 (Optional)
# =========================
# For Outlook email integration
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# =========================
# STORAGE (Optional)
# =========================
# For document storage - can use Supabase Storage or cloud provider
# AZURE_STORAGE_CONNECTION_STRING=
# AWS_S3_BUCKET=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
